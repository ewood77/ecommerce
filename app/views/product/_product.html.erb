<% @products.each do |product| %>
  <div class="all_products">
    	<% if product.price < 13 %>
    		<div class="thumbnail sale">
    	<% else %>
    		<div class="thumbnail">
	    <% end %>
	    <%= link_to (image_tag product.image_path), product %>
	      <div class="caption">
	        <p><strong>Price:</strong> $<%= product.price %></p>
	      </div>
	    </div>
  </div>
<% end %>