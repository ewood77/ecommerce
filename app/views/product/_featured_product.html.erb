<% @featured_products.each do |product| %>
  <div class="featured_product">
    <%= link_to (image_tag product.image_path), product %>
    <div class="caption">
      <p><strong><%= product.name %></strong></p>
      <p><strong>Price:</strong> $<%= product.price %> | <strong>Category:</strong> <%= product.category.name %></p>
    </div>
  </div>
<% end %>