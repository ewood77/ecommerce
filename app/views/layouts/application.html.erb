<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<!-- MAIN NAVIGATION -->
  <div class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="glyphicon glyphicon-chevron-down"></span>
        </button>
        <span class="navbar-brand">204Hats</span>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'About Us', about_path %></li>
          <li><%= link_to 'Contact Us', contact_path %></li>
          <!--<li><%= link_to 'Login', root_path %></li>-->
        </ul>
      </div>
    </div>
  </div>

<!-- PRODUCT NAVIGATION -->
  <div class="navbar navbar-default navbar-static-top product-nav" role="navigation">
    <div class="container">
        <ul class="nav navbar-nav navbar">
          <li><%= link_to 'All', root_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Categories <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <li><a href="#">CFL</a></li>
              <li><a href="#">NFL</a></li>
              <li><a href="#">NHL</a></li>
              <li><a href="#">NBA</a></li>
              <li><a href="#">MLB</a></li>
            </ul>
          </li>
        </ul>
    </div>
  </div>

<!--  
  <ul class="nav nav-pills">
    <li><%= link_to 'Shopping Cart', root_path %></li>
    <li><%= link_to 'Wishlist', root_path %></li>
    <li><%= link_to 'Help', root_path %></li>
  </ul>
-->

<br />

<div class="row">
  <div class="col-md-6">
    <div class="input-group input-group-sm search">
      <span class="input-group-addon">Product Search</span>
      <input type="text" class="form-control"/>
      <span class="input-group-btn">
        <button class="btn btn-default" type="button">Search</button>
      </span>
    </div>
  </div>
</div>  
  
<br />

<%= yield %>
 
<div id="footer">
  <div class="container">
    <p class="text-muted credit">Copyright &copy; 204Hats 2013</p>
  </div>
</div>
</body>
</html>
